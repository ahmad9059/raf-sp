generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  password     String
  role         Role        @default(DEPT_HEAD)
  departmentId String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  image        String?
  department   Department? @relation(fields: [departmentId], references: [id])

  @@index([departmentId])
  @@index([email])
}

model Department {
  id                              String                            @id @default(cuid())
  name                            String                            @unique
  location                        String
  logo                            String?
  createdAt                       DateTime                          @default(now())
  updatedAt                       DateTime                          @updatedAt
  description                     String?
  designation                     String?
  email                           String?
  focalPerson                     String?
  phone                           String?
  amriInventory                   AMRIInventory[]
  agriEngineeringMultanRegionData AgriEngineeringMultanRegionData[]
  agronomyLabEquipment            AgronomyLabEquipment[]
  criMultanAssets                 CRIMultanAssets[]
  erssStockRegister               ERSSStockRegister[]
  equipment                       Equipment[]
  floricultureStationAssets       FloricultureStationAssets[]
  foodAnalysisLabEquipment        FoodAnalysisLabEquipment[]
  mnsuamEstateFacilities          MNSUAMEstateFacilities[]
  mriAssets                       MRIAssets[]
  pesticideQCLabData              PesticideQCLabData[]
  rariBahawalpurAssets            RARIBahawalpurAssets[]
  soilWaterTestingProject         SoilWaterTestingProject[]
  users                           User[]

  @@index([name])
}

model Equipment {
  id              String           @id @default(cuid())
  name            String
  type            String
  status          EquipmentStatus  @default(AVAILABLE)
  purchaseDate    DateTime
  imageUrl        String?
  departmentId    String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  department      Department       @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  maintenanceLogs MaintenanceLog[]

  @@index([departmentId])
  @@index([status])
  @@index([type])
}

model MaintenanceLog {
  id          String    @id @default(cuid())
  equipmentId String
  date        DateTime
  cost        Decimal   @db.Decimal(10, 2)
  description String
  createdAt   DateTime  @default(now())
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@index([equipmentId])
  @@index([date])
}

model AMRIInventory {
  id               String          @id @default(cuid())
  name             String
  type             String
  imageUrl         String?
  departmentId     String
  assetCategory    String?
  itemDescription  String?
  quantityOrArea   String?
  functionalStatus String?
  remarks          String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  status           EquipmentStatus @default(AVAILABLE)
  department       Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model FoodAnalysisLabEquipment {
  id             String          @id @default(cuid())
  name           String
  type           String
  imageUrl       String?
  departmentId   String
  labSectionName String?
  roomNumber     String?
  quantity       Int             @default(1)
  focalPerson    String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  status         EquipmentStatus @default(AVAILABLE)
  department     Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model MRIAssets {
  id                    String          @id @default(cuid())
  name                  String
  type                  String
  imageUrl              String?
  departmentId          String
  category              String?
  itemNameOrDesignation String?
  bpsScale              Int?
  totalQuantityOrPosts  Int?
  filledOrFunctional    Int?
  vacantOrNonFunctional Int?
  remarksOrLocation     String?
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  status                EquipmentStatus @default(AVAILABLE)
  department            Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model AgronomyLabEquipment {
  id           String          @id @default(cuid())
  name         String
  type         String
  imageUrl     String?
  departmentId String
  quantity     Int?
  focalPerson1 String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  status       EquipmentStatus @default(AVAILABLE)
  department   Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model FloricultureStationAssets {
  id             String          @id @default(cuid())
  name           String
  type           String
  imageUrl       String?
  departmentId   String
  category       String?
  itemNameOrPost String?
  bpsScale       String?
  sanctionedQty  Int?
  inPositionQty  Int?
  detailsOrArea  String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  status         EquipmentStatus @default(AVAILABLE)
  department     Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model RARIBahawalpurAssets {
  id              String          @id @default(cuid())
  name            String
  type            String
  imageUrl        String?
  departmentId    String
  category        String?
  makeModelYear   String?
  quantity        Int?
  conditionStatus String?
  useApplication  String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  status          EquipmentStatus @default(AVAILABLE)
  department      Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model MNSUAMEstateFacilities {
  id              String          @id @default(cuid())
  name            String
  type            String
  imageUrl        String?
  departmentId    String
  blockName       String?
  facilityType    String?
  capacityPersons Int?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  status          EquipmentStatus @default(AVAILABLE)
  department      Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model CRIMultanAssets {
  id                 String          @id @default(cuid())
  name               String
  type               String          // "Laboratory Equipment" or "Farm Machinery"
  imageUrl           String?
  departmentId       String
  
  // For Lab Equipment
  makeModel          String?         // Make/Model/Specification
  labDepartment      String?         // Name of Lab/Department/Section
  purposeFunction    String?         // Purpose/Function
  
  // For Farm Machinery
  year               String?         // Year of purchase
  location           String?         // Location (e.g., "CRI, Farm Shed")
  
  // Common fields
  quantity           Int             @default(1)
  operationalStatus  String?         // "Functional" or "Non-Functional"
  
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  status             EquipmentStatus @default(AVAILABLE)
  department         Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
  @@index([type])
}

model SoilWaterTestingProject {
  id                           String          @id @default(cuid())
  name                         String
  type                         String
  imageUrl                     String?
  departmentId                 String
  category                     String?
  bps                          Int?
  quantityRequired             Int?
  budgetAllocationTotalMillion Decimal?        @db.Decimal(10, 3)
  justificationOrYear          String?
  createdAt                    DateTime        @default(now())
  updatedAt                    DateTime        @updatedAt
  status                       EquipmentStatus @default(AVAILABLE)
  department                   Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model ERSSStockRegister {
  id                   String          @id @default(cuid())
  name                 String
  type                 String
  imageUrl             String?
  departmentId         String
  registerPageNo       Int?
  quantityStr          String?
  dateReceived         DateTime?
  lastVerificationDate String?
  currentStatusRemarks String?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  status               EquipmentStatus @default(AVAILABLE)
  department           Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
}

model PesticideQCLabData {
  id                   String          @id @default(cuid())
  name                 String
  type                 String
  status               EquipmentStatus @default(AVAILABLE)
  imageUrl             String?
  departmentId         String
  sectionCategory      String?
  bpsScale             Int?
  quantityOrSanctioned Int?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  department           Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
  @@map("PesticideQCLabData")
}

model AgriEngineeringMultanRegionData {
  id             String          @id @default(cuid())
  name           String
  type           String
  status         EquipmentStatus @default(AVAILABLE)
  imageUrl       String?
  departmentId   String
  category       String?
  divisionOrCity String?
  officeName     String?
  quantityOrArea String?
  contactDetails String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  department     Department      @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId])
  @@index([status])
  @@map("Agri_Engineering_Multan_Region_Data")
}

enum Role {
  ADMIN
  DEPT_HEAD
}

enum EquipmentStatus {
  AVAILABLE
  IN_USE
  NEEDS_REPAIR
  DISCARDED
}
